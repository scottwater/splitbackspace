---
layout: default
---
{%- if draft %}
<h1 class="text-aurora-red">DRAFT POST! POST DRAFT!</h1>
{% endif %}
<h1>{{ title }}</h1>
{% if image %}
<p class="pt-2">
  <img class="block" src="{{image}}" alt="{{image_alt}}" />
  {% if image_credit %}
  <span class="text-base text-gray-500">Photo Credit: {{image_credit}}</span>
  {% endif %}
</p>
{% endif %}
{{ content | safe }}
{% if soundTest %}
  <div class="mb-2">
    <h3 class="mb-2 text-2xl font-semibold text-center">Sound Profile</h3>
    {% if soundMessage %}
      <p>{{soundMessage}}</p>
    {% endif %}
    <p>{{soundTest}}</p>
  </div>
{% endif %}

{% if images %}
<h3 class="mt-4 text-2xl font-semibold text-center">Photos</h3>
<div class="flex flex-wrap">
{% for img in images %}
  <div class="w-full">
  <div class="h-full px-4 pt-3 mx-4 mt-2 overflow-hidden rounded shadow-lg">
  <img src="{{page.filePathStem}}/{{img.img}}" alt="{{img.at}}" loading="lazy" />
    {% if img.desc %}
  <p class="mt-4">{{img.desc}}</p>
  {% endif %}
  </div>

  </div>
{% endfor %}
</div>
<!--FOOTNOTES-->
{% else %}
  <h3>No Image Data available</h3>
{% endif %}
