---
layout: default
---
{%- if draft %}
<h1 class="text-aurora-red">DRAFT POST! POST DRAFT!</h1>
{% endif %}
<h1>{{ title }}</h1>
{% if image %}
<p class="pt-2">
  <img class="block" src="{{image}}" alt="{{image_alt}}" />
  {% if image_credit %}
  <span class="text-base text-gray-500">Photo Credit: {{image_credit}}</span>
  {% endif %}
</p>
{% endif %}
{{ content | safe }}

  <div data-controller="playlist">
      <audio class="w-full" data-target="playlist.player" type="audio/mpeg" controls></audio>
      <div class="mt-4 space-y-4" id="playlist" data-target="playlist.playlist">
      {% for track in tracks %}
        <div data-controller="track" data-target="playlist.track" class="p-2 space-x-4 border-l-2 border-white" data-src="{{track.src}}">
          <button data-action="track#play" class="px-4 py-2 font-bold text-white bg-green-500 rounded hover:bg-green-700">Play</button>
          <button data-action="track#reveal" class="px-4 py-2 font-bold text-white bg-blue-500 rounded hover:bg-blue-700" data-target="playlist.revealButton">Reveal</button>
          <span class="hidden font-bold" data-target="track.message playlist.message">{{track.message}}</span>
        </div>
      {% endfor %}
      </div>
      <div class="py-2 mt-4 border-t-2 border-gray-500">
        <button data-action="playlist#shuffle" class="px-4 py-2 font-bold text-white bg-red-500 rounded hover:bg-red-700">Shuffle</button>
        <button data-action="playlist#reveal" class="px-4 py-2 ml-4 font-bold text-white bg-blue-500 rounded hover:bg-blue-700">Reveal All</button>
      </div>
    </div>
  </div>

